<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="scanDialog" showHeader="true" title="{i18n>TIT_SCAN_BARCODE}" stretch="false">
		<content>
			<Input id="barcodeInput" liveChange="onBarcodeInputChanged"/>
		</content>
		<beginButton>
			<Button text="{i18n>BTN_OK}" press="onScanDialogOK"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>BTN_CANCEL}" press="onScanDialogCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>